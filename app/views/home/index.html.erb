<%# featured-projects %>
<div>
  <h3>Featured projects</h3>
  <% @featured_projects.each do |project| %>
    <%= render partial: 'projects/home-project', locals: {project: project} %>
  <% end %>
</div>

<%# featured groups %>
<div>
  <% @featured_groups.each do |group| %>
    <%= render partial: 'featured-group', locals: {group: group} %>
  <% end %>
</div>

<%# project groups %>
<div>
  <% @project_groups.each do |group| %>
    <%= render partial: 'project-group', locals: {group: group} %>
  <% end %>
</div>


<%# upcoming events %>
<div>
  <div>Upcoming HWC events</div>
  <% @events.each do |event| %>
    <%= render partial: 'event', locals: {event: event} %>
  <% end %>
</div>
